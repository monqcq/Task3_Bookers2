<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/f9124f844e.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <a class = "navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class = "navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navabarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
                  <i class="fas fa-home"> Home </i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "/users", class: 'nav-link text-light' do %>
                  <i class="fas fa-users"> Users </i>
                  <% end %>
                </li>
                <li>
                  <%= link_to "/books", class: 'nav-link text-light' do %>
                  <i class="fas fa-book-open"> Books </i>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-out-alt"> logout </i>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to "/", class: 'nav-link text-light' do %>
                  <i class="fas fa-home"> Home </i>
                  <% end %>
                </li>
                <li>
                  <%= link_to home_about_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-link"> About </i>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-user-plus"> sign up </i>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-in-alt"> login </i>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <div class="container">
      <div class="row justify-content-center">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword %>
          <%= f.select :range, options_for_select([["Book"], ["User"]]) %>
          <%= f.select :way, options_for_select([["完全一致","perfect_match"],["部分一致","partial_match"],["前方一致","prefix_match"],["後方一致","backward_match"]]) %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
    </div>

    <p><%= render 'layouts/notifications' %></p>

    <main>
    <%= yield %>
    </main>

    <footer class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
