    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size: '60x60' %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block  edit_user_path" href="/users/:id/edit"><i class="fas fa-user-cog"></i></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:book, local:true do |f| %>
        <label for="book_title">Title</label>
        <%= f.text_field :title, :id=>"book_title" %>
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, :id=>"book_opinion" %>
        <%= f.submit 'Create Book', :class=>"btn btn-success" %>
      <% end %>
    </div>